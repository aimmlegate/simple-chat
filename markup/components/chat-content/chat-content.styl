.chat-content
    padding: 20px
    display: flex
.chat-empty__ico
    margin-bottom: 20px

.chat-empty
    width: 100%
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

.chat-empty__text
    max-width: 300px
    text-align: center
    color: #b1c3d5

.chat-item
    display: flex
    max-width: 1000px
    margin-bottom: 25px
    &:last-child
        margin-bottom: 0
    &__img-cont
        display: flex
    &__img
        width: 38px
        height: 38px
        border-radius: 50%
    &__msg
        margin-left: 15px
    &__name
        color: #ffffff
        text-decoration: none
        margin-bottom: 10px
        font-weight: 600
    &__text
        font-weight: 400