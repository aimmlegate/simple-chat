.chat-header
    min-height: 50px
    border-bottom: 1px solid #2a3e53
    display: flex
    &__info
        display: flex
        flex-direction: column
        justify-content: center
        padding: 0.8rem 2rem;
        flex-grow: 1
    &__settings
        position: relative
        min-width: 60px
        display: flex
        align-items: center
        justify-content: center

.chat-header__users
    font-size: 12px
    font-weight: 400
    color: #b1c3d5

.hidden
    display: none
    
.hidden:checked ~ .chat-settings-container
    opacity: 1
    pointer-events: all

.chat-settings-btn .open
    display: block

.chat-settings-btn .close
    display: none

.hidden:checked ~ .chat-settings-btn .open
    display: none

.hidden:checked ~ .chat-settings-btn .close
    display: block

.chat-settings-btn 
    cursor pointer

.settings-item
    margin-bottom: 20px
    cursor: pointer
    &:last-child
        margin-bottom: 0


.chat-settings-container
    transition: opacity .3s ease
    position: absolute
    right: 15px
    top: 65px
    opacity: 0
    height: auto
    pointer-events: none
    width: 180px
    padding: 10px
    background-color: #19222d
    box-shadow: 1px 1px 10px 0px rgba(0,0,0,0.35)
    border-radius: 8px 
