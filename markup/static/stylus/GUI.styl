.container
    display: flex
    justify-content: center
    align-items: center
    height 100vh

.chat-window
    width 100%
    height 100%
    background-color: #19222d
    display: flex
    flex-direction: column
    font-size: 13px
    font-weight: 600
    color: #fff



        

        
.chat-content
    flex-grow: 1
    overflow-y: scroll;


.chat-content::-webkit-scrollbar {
    width: 5px;
}
 
